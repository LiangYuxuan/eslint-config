{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "composite": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "verbatimModuleSyntax": true
    },
    "include": ["src/**/*", "eslint.config.ts"]
}
